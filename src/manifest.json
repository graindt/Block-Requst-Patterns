{
    "manifest_version": 2,
    "name": "BlockRequests",
    "version": "1.0",
    "description": "Block requests based on patterns.",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_title": "Block Requests",
        "default_popup": "settings.html"
    }
}